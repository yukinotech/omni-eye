{
  "manifest_version": 3,
  "name": "Omni Eye",
  "version": "0.1.0",
  "description": "AI-assisted change detection for the browser",
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Omni Eye"
  },
  "externally_connectable": {
    "matches": ["*://localhost/*"]
  }
}
