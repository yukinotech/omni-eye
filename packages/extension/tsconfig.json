{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "ESNext",
    "noEmit": true,
    "target": "ES2020",
    "types": ["chrome"],
    "lib": ["ES2020", "DOM"],
    "noImplicitAny": true,
    "sourceMap": false,
    "declaration": false,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "scripts"]
}
